@model pweb_eCarSharing.Models.EditReservationViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Change Rental Request Details</h2>
        <hr />

        <div class="form-group">
            <label>Target Request Id:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReservationID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ReservationID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Vehicle's ID number:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.VehicleID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VehicleID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Delivery Station ID:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.idStationIdEnd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.idStationIdEnd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Total use time (minutes):</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.predictedUseTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.predictedUseTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Details" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ListRentalData")
</div>
