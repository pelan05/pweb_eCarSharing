@model pweb_eCarSharing.Models.NewReservationViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>New Rental Request</h2>
        <hr />

        <div class="form-group">
            <label>Vehicle's ID:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.VehicleID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VehicleID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Delivery Station's ID:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.idStationIdEnd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.idStationIdEnd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Total use time (minutes):</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.predictedUseTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.predictedUseTime, "", new { @class = "text-danger" })
            </div>
        </div>
        @if (ViewBag.error)
        {
            <label class="ml-3" style="color: red; font-size: 12px;">Please enter valid information</label>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Request Rental" class="btn btn-success" />
            </div>
        </div>
    </div>
}

