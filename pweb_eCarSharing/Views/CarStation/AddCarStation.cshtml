@model pweb_eCarSharing.Models.AddCarStationViewModel

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Add a new Car Station</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>In what city is the station?</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.stationCity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.stationCity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>The Adress where it is at:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.stationAdress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.stationAdress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Station" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "CarStationList")
</div>
