@model pweb_eCarSharing.Models.changeVehiclePriceViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Change Vehicle Price</h2>
        <hr />


        <div class="form-group">
            <label>Target Vehicle's ID number:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.vehicleID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vehicleID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Vehicle's new price per minute:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.pricePerMinute, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pricePerMinute, "", new { @class = "text-danger" })
            </div>
        </div>
        @if (ViewBag.error)
        {
            <label class="ml-3" style="color: red; font-size: 12px;">No changes in vehicle data</label>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit New Price" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "AvailableVehicleList")
</div>
